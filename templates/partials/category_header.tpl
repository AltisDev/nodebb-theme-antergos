<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12" data-cid="{categories.cid}" data-numRecentReplies="{categories.numRecentReplies}">
		<meta itemprop="name" content="{categories.name}">
		<div class="et_pb_column et_pb_column_4_4">
			<div class="et_pb_text et_pb_bg_layout_light et_pb_text_align_left" itemprop="item">
				<h2 id="{categories.name}" class="category-group" itemprop="name">{categories.name}</h2>
				<p itemprop="description">{categories.description}</p>
			</div>
			<hr class="et_pb_space et_pb_divider">
		</div>
	</div>
</div>